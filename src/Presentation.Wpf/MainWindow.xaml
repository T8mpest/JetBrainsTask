<Window x:Class="JetBrainsTask.Presentation.Wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:md="clr-namespace:MdXaml;assembly=MdXaml"
        Title="LLM Diff Prompt Tool"
        Height="650"
        Width="1100"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="2.5*" />
        </Grid.ColumnDefinitions>
        
        <StackPanel Grid.Row="0" Grid.ColumnSpan="3" Orientation="Horizontal" Margin="8">
            <Button Content="Open original…" Command="{Binding OpenOriginalCommand}" Margin="0,0,8,0"/>
            <Button Content="Open as Modified…" Command="{Binding OpenModifiedCommand}" Margin="0,0,16,0"/>
            <CheckBox Content="Also fill Modified" IsChecked="{Binding AlsoFillModified}" />
    
            <Button Content="Build prompt" Width="120" Margin="0,0,8,0"
                    Command="{Binding BuildPromptCommand}" />
            <Button Content="Send to LLM" Width="120" Margin="0,0,8,0"
                    Command="{Binding SendToLlmCommand}" />

            <TextBlock Text="File name:" VerticalAlignment="Center" Margin="8,0,4,0" />
            <TextBox Text="{Binding FileName, UpdateSourceTrigger=PropertyChanged}"
                     Width="220" Margin="0,0,12,0" />
            <TextBlock Text="Edit code in editors and click 'Build prompt'." VerticalAlignment="Center" />
        </StackPanel>
        
        <GroupBox Header="Original code" Grid.Row="1" Grid.Column="0" Margin="8">
            <TextBox Text="{Binding OriginalCode, UpdateSourceTrigger=PropertyChanged}"
                     AcceptsReturn="True" AcceptsTab="True"
                     VerticalScrollBarVisibility="Auto"
                     HorizontalScrollBarVisibility="Auto"
                     FontFamily="Consolas"
                     TextWrapping="NoWrap" />
        </GroupBox>
        <GroupBox Header="Modified code" Grid.Row="1" Grid.Column="1" Margin="8">
            <TextBox Text="{Binding ModifiedCode, UpdateSourceTrigger=PropertyChanged}"
                     AcceptsReturn="True" AcceptsTab="True"
                     VerticalScrollBarVisibility="Auto"
                     HorizontalScrollBarVisibility="Auto"
                     FontFamily="Consolas"
                     TextWrapping="NoWrap" />
        </GroupBox>
        
        <GroupBox Header="Generated prompt / LLM response" Grid.Row="1" Grid.Column="2" Margin="8">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="1.2*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <TextBox Grid.Row="0"
                         Text="{Binding PromptText}"
                         IsReadOnly="True"
                         AcceptsReturn="True"
                         VerticalScrollBarVisibility="Auto"
                         HorizontalScrollBarVisibility="Auto"
                         FontFamily="Consolas"
                         TextWrapping="NoWrap" />
                <md:MarkdownScrollViewer Grid.Row="1"
                                         Margin="0,8,0,0"
                                         Markdown="{Binding LlmResponse}"
                                         VerticalScrollBarVisibility="Auto" />
            </Grid>
        </GroupBox>
    </Grid>
</Window>
